{
    "manifestVersion": 5,
    "id": "com.example.automationplugin",
    "name": "Automation Plugin",
    "version": "1.0.0",
    "main": "index.html",
    "host": [
        {
            "app": "PS",
            "minVersion": "26.7"
        }
    ],
    "entrypoints": [
        {
            "type": "panel",
            "id": "automationPanel",
            "label": {
                "default": "Automation Panel"
            },
            "minimumSize": { "width": 280, "height": 350 },
            "preferredSize": { "width": 350, "height": 550 },
            "maximumSize": { "width": 1200, "height": 900 },
            "icons": [
                { "width": 23, "height": 23, "path": "icons/dark.png", "scale": [1, 2], "theme": ["darkest", "dark", "medium"] },
                { "width": 23, "height": 23, "path": "icons/light.png", "scale": [1, 2], "theme": ["lightest", "light"] }
            ]
        }
    ],
    "requiredPermissions": {
        "localFileSystem": "fullAccess",
        "launchProcess": {
            "local": "yes"
        },
        "clipboard": "readAndWrite",
        "webview": {
            "allow": "yes",
            "domains": ["*"]
        }
    },
    "icons": [
        { "width": 48, "height": 48, "path": "icons/plugin_icon.png" }
    ]
}
